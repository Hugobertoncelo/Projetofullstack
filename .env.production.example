# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Database Configuration
POSTGRES_USER=chatuser_prod
POSTGRES_PASSWORD=your-super-secure-postgres-password
POSTGRES_DB=chatdb_prod

# Redis Configuration
REDIS_PASSWORD=your-super-secure-redis-password

# Elasticsearch Configuration
ELASTIC_PASSWORD=your-super-secure-elastic-password

# JWT Secrets (Generate with: openssl rand -base64 64)
JWT_SECRET=your-super-secure-jwt-secret-minimum-64-characters-for-production
JWT_REFRESH_SECRET=your-super-secure-refresh-jwt-secret-minimum-64-characters-for-production

# Session Secret (Generate with: openssl rand -base64 64)
SESSION_SECRET=your-super-secure-session-secret-minimum-64-characters-for-production

# Application URLs
FRONTEND_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com/api
NEXT_PUBLIC_SOCKET_URL=https://your-domain.com
CORS_ORIGIN=https://your-domain.com

# Email Configuration (for 2FA and notifications)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-app-email@gmail.com
EMAIL_SMTP_PASS=your-gmail-app-password
EMAIL_FROM=noreply@your-domain.com

# OAuth2 Configuration (Optional)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-url
DATADOG_API_KEY=your-datadog-api-key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
